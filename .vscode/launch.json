{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug current test file",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "args": ["test", "--runInBand", "--runTestsByPath", "--no-cache", "${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
